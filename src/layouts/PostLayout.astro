---
import TableOfContents from "@components/TableOfContents";
import ToggleTableOfContents from "@components/ToggleTableOfContents";
import Layout from "./Layout.astro";
import { getEntry } from "astro:content";
import Utterances from "@components/Utterances.astro";
import { formatDateElapsed, formatDateToMDY } from "src/utils/formatDate";
import Tags from "@components/Tags";

const { frontmatter } = Astro.props;
const { slug } = Astro.params;

const post: any = await getEntry(frontmatter.category, slug);
const { headings } = await post.render(post);
---

<Layout headings={headings}>
  <div class="flex flex-col xl:flex-row xl:justify-center">
    <ToggleTableOfContents client:only="preact" headings={headings} />
    <div>
      <div class="my-8 flex w-full flex-col px-4 md:px-8 xl:max-w-[752px]">
        <p class="m-0 text-5xl font-bold text-zinc-700 dark:text-zinc-200">
          {frontmatter.title}
        </p>
        <p class="ml-px mt-2 text-sm text-zinc-500">
          {formatDateToMDY(frontmatter.pubDate)} Â· {
            formatDateElapsed(frontmatter.pubDate)
          }
        </p>
        {frontmatter.tags.length >= 1 && <Tags tags={frontmatter.tags} />}
      </div>
      <div class="mt-8 w-full border-b border-zinc-200 dark:border-zinc-800">
      </div>

      <article
        class="post prose prose-zinc my-8 w-full max-w-none px-4 dark:prose-invert prose-headings:mt-[1em] prose-headings:text-zinc-700 prose-p:text-zinc-600 prose-strong:text-zinc-700 prose-code:bg-zinc-200 prose-code:font-normal prose-code:text-zinc-500 dark:prose-headings:text-zinc-200 dark:prose-p:text-zinc-400 dark:prose-strong:text-zinc-200 dark:prose-code:bg-zinc-700 dark:prose-code:text-zinc-300 md:px-8 xl:max-w-[752px]"
      >
        <slot />
      </article>

      <div class="mt-8 w-full border-b border-zinc-200 dark:border-zinc-800">
      </div>

      <div class="m-auto my-8 w-full px-4 xl:max-w-[752px] xl:px-8">
        <Utterances />
      </div>
    </div>
    <TableOfContents client:only="preact" headings={headings} />
  </div>
</Layout>
