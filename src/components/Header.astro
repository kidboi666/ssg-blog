---
import Button from "./Button";
import Link from "./Link";
import MobileSideNavigation from "./MobileSideNavigation.astro";
import ThemeButton from "./ThemeButton";
---

<div
  id="sidebar"
  class="-translate-x-full transition-transform duration-300 ease-in-out"
>
  <MobileSideNavigation />
</div>
<header
  class="dark:bg-var-accent-dark fixed left-0 top-0 z-30 flex w-full items-center border-b border-zinc-200 bg-zinc-100 px-4 py-2 dark:border-zinc-900"
>
  <div class="flex w-full justify-between gap-2">
    <div class="flex gap-2">
      <Button
        id="sidebar-button"
        intent="icon"
        padding="md"
        icon="menu"
        className="md:hidden"
      />
      <Link intent="icon" padding="md" href="/" icon="home" />
      <Link intent="icon" padding="md" href="/resume" icon="question" />
      <Link
        intent="icon"
        padding="md"
        href="https://github.com/kidboi666"
        viewBox="0 0 18 18"
        icon="github"
      />
    </div>
    <ThemeButton client:only="preact" />
  </div>
</header>

<script is:inline>
  const button = document.querySelector("#sidebar-button");
  const sidebar = document.querySelector("#sidebar");

  button.addEventListener("click", () => {
    sidebar.classList.toggle("-translate-x-full");
  });
</script>
