---
import Button from "./Button.astro";
---

<header class="header-container">
  <Button variants="icon" href="/" type="home" />
  <Button variants="icon" href="/category" type="category" />
  <Button variants="icon" href="/resume" type="question" />
</header>

<style>
  .header-container {
    border-radius: 16px;
    width: 100%;
    padding: 4px 12px;
    position: sticky;
    z-index: 20;
    display: flex;
    gap: 24px;
    top: 0;
    left: 0;
    right: 0;
    background-color: white;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.25);
  }
</style>
